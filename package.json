  "scripts": {
    "start2": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist",
    "start": "cross-env NODE_ENV=development npm run --slient tslint && tsc && node dist",
    "test": "./node_modules/.bin/mocha --require ts-node/register test/*.test.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-sass": "node-sass assets/src/scss/app.scss assets/dist/css/app.css",
    "watch-sass": "node-sass -w assets/src/scss/app.scss assets/dist/css/app.css",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "build:ts": "npm run --slient tslint && tsc -p assets/tsconfig.json",
    "watch:ts": "nodemon -e ts -w assets/src/ts -x npm run build:ts",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node --inspect src/index.ts",
    "watch:all": "concurrently \"npm run watch\" \"npm run watch:scss\" \"npm run watch:ts\""
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
