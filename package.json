  "contributors": [],
  "scripts": {
    "start": "cross-env NODE_ENV=development npm run --slient tslint && tsc && node dist",
    "test": "./node_modules/.bin/mocha --require ts-node/register test/*.test.ts",
    "tslint": "tslint -p .",
    "build:scss": "node-sass --include-path scss assets/src/scss/app.scss assets/dist/css/app.css",
    "watch:scss": "nodemon -e scss -x npm run build:scss",
    "build:ts": "npm run --slient tslint && tsc -p assets/tsconfig.json",
    "watch:ts": "nodemon -e ts -w assets/src/ts -x npm run build:ts",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node --inspect src/index.ts",
    "watch:all": "concurrently \"npm run watch\" \"npm run watch:scss\" \"npm run watch:ts\""
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.0.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "spdy": "^3.4.7"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.0",
    "@types/mocha": "^2.2.47",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
